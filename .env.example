
########################################
# Server Configuration
########################################
# Port for the HTTP server to listen on
PORT=8081

# Base URL for logs and generated links
BASE_URL=http://localhost

# API version (used in route prefix, e.g., /api/v1)
VERSION=1


########################################
# Scraper Settings
########################################
# Base URL of the site to scrape
SCRAPING_URI=https://www.amazon.com

# Maximum number of pages to scrape per request
MAX_PAGES=3


########################################
# Rate Limiter Configuration
########################################
# Time window in milliseconds for rate limiting (e.g., 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum number of requests allowed per window per IP
RATE_LIMIT_MAX=10


########################################
# Logging Configuration
########################################
# Debug mode (1 = enabled, 0 = disabled)
DEBUG=0

# Morgan log format: 'dev' for development, 'combined' for production
MORGAN_FORMAT=dev
